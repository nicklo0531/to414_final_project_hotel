library(neuralnet)
library(caret)
library(ggplot2)

set.seed(12345)

# Sample 30% of training data for faster ANN training

df_train_small <- df_train[sample(nrow(df_train), size = 0.3 * nrow(df_train)), ]

# Train neural network with two hidden layers

ann_model <- neuralnet(
  is_canceled ~ .,
  data = df_train_small,
  lifesign = "minimal",
  stepmax = 1e6,
  hidden = c(3,2)
)

# Predict probabilities on full test set

ann_test_prob  <- predict(ann_model, df_test)

# If predict returns a matrix, convert to vector

if (is.matrix(ann_test_prob)) {
  ann_test_prob <- ann_test_prob[,1]
}

# Convert predictions to binary using 0.5 threshold

ann_test_pred <- ifelse(ann_test_prob >= 0.5, 1, 0)

# Confusion matrix

ann_test_cm <- confusionMatrix(
  factor(ann_test_pred, levels = c(0,1)),
  factor(df_test$is_canceled, levels = c(0,1)),
  positive = "1"
)

# Save probabilities for stacking

saveRDS(ann_test_prob,  "RDS/ann_test_prob.rds")

# Print ANN structure and confusion matrix

print(plot(ann_model))
print(ann_test_cm)